/* CRITICAL: Dropdown list styling - this fixes the visibility issue */
QComboBox QAbstractItemView {
    border: 2px solid #dee2e6;
    border-radius: 6px;
    background-color: white;
    selection-background-color: #007bff;
    selection-color: white;
    outline: none;
    font-size: 12px;
}

/* Individual dropdown items - FIXED */
QComboBox QAbstractItemView::item {
    padding: 8px 12px;
    border-bottom: 1px solid #dee2e6;
    color: #495057;  /* Dark text for visibility */
    background-color: white;
    min-height: 20px;
}

/* Hover state - FIXED */
QComboBox QAbstractItemView::item:hover {
    background-color: #e9ecef;  /* Light gray background */
    color: #212529;  /* Dark text */
}

/* Selected state - FIXED */
QComboBox QAbstractItemView::item:selected {
    background-color: #007bff;  /* Blue background */
    color: white;  /* White text */
}

/* Focus state for dropdown items */
QComboBox QAbstractItemView::item:focus {
    background-color: #007bff;
    color: white;
    outline: none;
}

/* Alternate row coloring for better readability */
QComboBox QAbstractItemView::item:alternate {
    background-color: #f8f9fa;
}

/* Bank account selector specific styling */
QComboBox#bankAccountSelector {
    padding: 8px 12px;
    border: 2px solid #3498db;
    border-radius: 6px;
    background-color: white;
    font-size: 12px;
    font-weight: 500;
    min-width: 250px;
}

QComboBox#bankAccountSelector:hover {
    border-color: #2980b9;
    background-color: #f8f9fa;
}

QComboBox#bankAccountSelector QAbstractItemView::item {
    color: #2c3e50;  /* Darker text for bank accounts */
    font-weight: 500;
}

QComboBox#bankAccountSelector QAbstractItemView::item:hover {
    background-color: #3498db;  /* Blue hover background */
    color: white;  /* White text on hover */
}

QComboBox#bankAccountSelector QAbstractItemView::item:selected {
    background-color: #2980b9;  /* Darker blue when selected */
    color: white;
}